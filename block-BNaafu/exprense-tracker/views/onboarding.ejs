    <section class="section">
        <article>
            <% data.forEach((elm)=> { %>
                <% if(elm.source){%>
                    <h2>
                        <%= elm.source %>
                    </h2>
                    <% } else {%>
                        <h2>
                            <%= elm.category %>
                        </h2>
                        <%}%>

